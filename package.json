{
  "name": "open-garden",
  "version": "0.0.1",
  "description": "Garden assistant, for your seedlings and vegetables",
  "author": "Rudy Marchandise",
  "license": "GPL-3.0",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\"",
    "lint:fix": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/e2e/jest-e2e.json"
  },
  "homepage": "https://github.com/Ealenn/OpenGarden#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Ealenn/OpenGarden.git"
  },
  "bugs": {
    "url": "https://github.com/Ealenn/OpenGarden/issues"
  },
  "dependencies": {
    "@nestjs/common": "^8.x.x",
    "@nestjs/core": "^8.x.x",
    "@nestjs/platform-express": "^8.x.x",
    "reflect-metadata": "^0.1.x",
    "rimraf": "^3.x.x",
    "rxjs": "^7.x.x"
  },
  "devDependencies": {
    "@nestjs/cli": "^8.x.x",
    "@nestjs/schematics": "^8.x.x",
    "@nestjs/testing": "^8.x.x",
    "@types/express": "^4.x.x",
    "@types/jest": "^27.x.x",
    "@types/node": "^17.x.x",
    "@types/supertest": "^2.x.x",
    "@typescript-eslint/eslint-plugin": "^5.x.x",
    "@typescript-eslint/parser": "^5.x.x",
    "eslint": "^8.x.x",
    "eslint-config-prettier": "^8.x.x",
    "eslint-plugin-prettier": "^4.x.x",
    "jest": "^27.x.x",
    "prettier": "^2.x.x",
    "source-map-support": "^0.5.x",
    "supertest": "^6.x.x",
    "ts-jest": "27.x.x",
    "ts-loader": "^9.x.x",
    "ts-node": "^10.x.x",
    "tsconfig-paths": "4.x.x",
    "typescript": "^4.x.x"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "./test",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
